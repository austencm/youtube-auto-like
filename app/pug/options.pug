doctype html
html
  head
    meta(charset='utf-8')

    link(href='https://fonts.googleapis.com/css?family=Titillium+Web:400,700', rel='stylesheet')
    link(href='styles/options.css', rel='stylesheet', type='text/css')

  body
    h1#title
      strong YouTube
      |  Auto Like
    #options-wrap
      form#options-form(enctype='multipart/form-data')
        .form-group
          .form-group-title __MSG_optLikeWhatTitle__
          label
            input(type='radio', name='like_what', value='all')
            | __MSG_optLikeAll__
          label
            input(type='radio', name='like_what', value='subscribed')
            | __MSG_optLikeSub__
              
        .form-group
          .form-group-title __MSG_optLikeWhenTitle__
          label
            input(type='radio', name='like_when', value='instantly')
            | __MSG_optLikeInstant__
          label(title='Or at the end of the video, if shorter.')
            input(type='radio', name='like_when', value='timed')
            | __MSG_optLikeTimed__
          label
            input(type='radio', name='like_when', value='percent')
            | __MSG_optLikePercent__
        
        .form-group.form-group__no-title
          label 
            input(type='checkbox', name='disabled' value='yes')
            | __MSG_optDisable__
            
    #links
      a#donate-link(href='https://www.buymeacoffee.com/austen', title='Feed my cats', target='_blank') ☕️
      a#report-link(href='https://github.com/austencm/youtube-auto-like/issues/new', title='Report a Bug', target='_blank') ⚠️
      a#github-link(href='https://github.com/austencm/youtube-auto-like', title='GitHub', target='_blank')
        svg
          use(xlink:href='#icon-git')
      
    script(src='scripts/modules/i18n.js') 
    script(src='scripts/modules/option-manager.js')
    script(src='scripts/options.js')

